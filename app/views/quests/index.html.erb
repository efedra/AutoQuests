<div class=" h-screen bg-white">
  <header class="border-2 border-b-[#16354D] shadow shadow-cyan-900 ">
    <h1 class="font-sans font-medium text-3xl text-[#16354D] py-2 px-4">AutoQuests</h1>
  </header>
  <main>
    <ol>
      <%- @quests.each do |quest| %>
        <li class=" relative  h-15 my-3 mx-8 first:mt-10 even:bg-[#E4E5EA]  flex font-sans border-2 border-[#16354D]">
          <p class="my-auto ml-3"> <%= quest.name %></p>
          <%= link_to "Играть!!", "/quests/#{quest.id}",
                      class: "  ml-auto mr-4 my-1.5 border-2 border-[#16354D] rounded-md px-2 font-medium
                                hover:text-cyan-600 hover:border-cyan-700" %>
        </li>
      <% end %>
    </ol>
  </main>
</div>
